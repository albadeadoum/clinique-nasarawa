 {% extends 'base.html.twig' %}

{% block title %}Hospitalisation{% endblock %}

{% block body %}
<div class="row">
  <div class="col-12">

    <div class="card card-secondary">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h3 class="card-title mb-0">Hospitalisation</h3>

        
          <button type="button"
                  class="btn btn-primary"
                  data-bs-toggle="modal"
                  data-bs-target="#addHospitalisationModal">
            <i class="fa-sharp fa-solid fa-plus">Nouvelle hospitalisation</i>
          </button>
        
      </div>

      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-striped table-bordered align-middle text-center mb-0">
            <thead class="table-light">
              <tr>
                <th>Date admission</th>
                <th>Date sortie</th>
                <th>Motif</th>
                <th>Histoire</th>
                <th>Evolution</th>
                <th>Conclusion</th>
                <th>Statut</th>
                <th>Créé le</th>
                <th>Modifié le</th>
                <th style="width: 160px;">Actions</th>
              </tr>
            </thead>

            <tbody>
            {% for hospitalisation in hospitalisations %}
              <tr>
                <td>{{ hospitalisation.dateAdmission ? hospitalisation.dateAdmission|date('Y-m-d H:i') : '-' }}</td>
                <td>{{ hospitalisation.dateSortie ? hospitalisation.dateSortie|date('Y-m-d H:i') : '-' }}</td>

                <td class="text-start">{{ hospitalisation.motifAdmission }}</td>

                {# Colonnes longues : tronquer pour garder une table lisible #}
                <td class="text-start">
                  {{ hospitalisation.histoireMaladie ? hospitalisation.histoireMaladie|u.truncate(60, '…', false) : '-' }}
                </td>
                <td class="text-start">
                  {{ hospitalisation.evolution ? hospitalisation.evolution|u.truncate(60, '…', false) : '-' }}
                </td>
                <td class="text-start">
                  {{ hospitalisation.conclusion ? hospitalisation.conclusion|u.truncate(60, '…', false) : '-' }}
                </td>

                <td>{{ hospitalisation.statut }}</td>
                <td>{{ hospitalisation.createdAt ? hospitalisation.createdAt|date('Y-m-d H:i') : '-' }}</td>
                <td>{{ hospitalisation.modifiedAt ? hospitalisation.modifiedAt|date('Y-m-d H:i') : '-' }}</td>

                <td>
                  <div class="d-flex gap-2 justify-content-center">
                    <a class="btn btn-sm btn-outline-secondary"
                       href="{{ path('app_hospitalisation_show', {'id': hospitalisation.id}) }}">
                      Show
                    </a>

                    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_RH') %}
                      <button type="button"
                              class="btn btn-sm btn-outline-primary js-edit-hospitalisation"
                              data-id="{{ hospitalisation.id }}"
                              data-url="{{ path('app_hospitalisation_edit', {'id': hospitalisation.id}) }}">
                        Edit
                      </button>
                    {% endif %}
                  </div>
                </td>
              </tr>
            {% else %}
              <tr>
                <td colspan="10" class="text-muted">Aucun enregistrement.</td>
              </tr>
            {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>

  </div>
</div>

{# =========================
   MODAL AJOUT
========================= #}
<div class="modal fade" id="addHospitalisationModal" tabindex="-1" aria-labelledby="addHospitalisationLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addHospitalisationLabel">Ajout Hospitalisation</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div class="modal-body">
        {{ form_start(form, {'attr': {'id': 'HospitalisationForm'}}) }}
          {{ form_widget(form) }}
          <div class="d-flex justify-content-between mt-3">
            <button class="btn btn-success">{{ button_label|default('Enregistrer') }}</button>
            <button type="reset" class="btn btn-secondary">{{ button_label2|default('Vider') }}</button>
          </div>
        {{ form_end(form) }}
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Fermer</button>
      </div>
    </div>
  </div>
</div>

{# =========================
   MODAL EDIT (AJAX)
========================= #}
<div class="modal fade" id="editHospitalisationModal" tabindex="-1" aria-labelledby="editHospitalisationLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editHospitalisationLabel">Modification</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div class="modal-body">
        <div id="editHospitalisationFormContainer"></div>
      </div>
    </div>
  </div>
</div>

<script>
(function () {
  const editModalEl = document.getElementById('editHospitalisationModal');
  const editModal = new bootstrap.Modal(editModalEl);
  const container = document.getElementById('editHospitalisationFormContainer');

  // Ouvrir modal edit + charger form
  document.querySelectorAll('.js-edit-hospitalisation').forEach(btn => {
    btn.addEventListener('click', async (e) => {
      e.preventDefault();

      const url = btn.getAttribute('data-url');

      try {
        const res = await fetch(url, {
          headers: { 'X-Requested-With': 'XMLHttpRequest' }
        });

        // Ici, 2 possibilités selon ton controller:
        // 1) tu renvoies du HTML (recommandé)
        // 2) tu renvoies du JSON { form: "<form>...</form>" }

        const contentType = res.headers.get('content-type') || '';

        if (contentType.includes('application/json')) {
          const data = await res.json();
          container.innerHTML = data.form ?? '<div class="alert alert-danger">Formulaire introuvable.</div>';
        } else {
          const html = await res.text();
          container.innerHTML = html;
        }

        editModal.show();
      } catch (err) {
        console.error(err);
        container.innerHTML = '<div class="alert alert-danger">Erreur lors du chargement du formulaire.</div>';
        editModal.show();
      }
    });
  });

  // Soumission AJAX du formulaire edit (le form est injecté dans container)
  document.addEventListener('submit', async (e) => {
    const form = e.target;

    // IMPORTANT: il faut que ton form édit ait un id="editHospitalisationForm"
    // ou alors on détecte s'il est dans le container.
    if (container.contains(form)) {
      e.preventDefault();

      try {
        const res = await fetch(form.action, {
          method: form.method || 'POST',
          body: new FormData(form),
          headers: { 'X-Requested-With': 'XMLHttpRequest' }
        });

        const contentType = res.headers.get('content-type') || '';

        if (contentType.includes('application/json')) {
          const data = await res.json();
          if (data.success) {
            window.location.reload();
            return;
          }
          container.innerHTML = data.form ?? '<div class="alert alert-danger">Erreur de validation.</div>';
        } else {
          // Si le controller renvoie du HTML (form avec erreurs), on remplace le contenu
          const html = await res.text();
          // Option: si tu renvoies une redirection, res.redirected peut être true
          if (res.redirected) {
            window.location.href = res.url;
            return;
          }
          container.innerHTML = html;
        }
      } catch (err) {
        console.error(err);
        alert("Erreur lors de la mise à jour.");
      }
    }
  });
})();
</script>

{% endblock %}


 
 
